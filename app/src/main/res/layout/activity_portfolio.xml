<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/portfolioTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/portfolio_page"
        android:textSize="42sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userStocksPortfolioTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:text="@string/user_stocks"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/quantityPortfolioTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/portfolioTextView" />

    <EditText
        android:id="@+id/stockListPortfolioEditText"
        android:layout_width="311dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:autofillHints="hi?"
        android:hint="@string/enter_ticker_e_g_aapl"
        android:inputType="text"
        android:padding="10dp"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="@id/quantityPortfolioEditText"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userStocksPortfolioTextView" />

    <TextView
        android:id="@+id/quantityPortfolioTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="32dp"
        android:text="@string/quantity"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/userStocksPortfolioTextView"
        app:layout_constraintTop_toBottomOf="@id/portfolioTextView" />

    <EditText
        android:id="@+id/quantityPortfolioEditText"
        android:layout_width="184dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:autofillHints="none"
        android:ems="16"
        android:hint="@string/enter_quantity"
        android:inputType="number"
        android:padding="10dp"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/stockListPortfolioEditText"
        app:layout_constraintTop_toBottomOf="@id/quantityPortfolioTextView" />

    <Button
        android:id="@+id/sellPortfolioStockButton"
        android:layout_width="390dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:text="@string/sell_stock"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.559"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quantityPortfolioEditText" />


</androidx.constraintlayout.widget.ConstraintLayout>